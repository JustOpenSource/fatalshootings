{
    "id": "/fe/subject/v1",

    "type": "object",

    "required" : ["name"],

    "properties": {

        "name" : {
            "type": "string"
        },

        "age" : {
            "type": "integer",
            "minimum" : 0,
            "maximum" : 150
        },

        "sex": {
            "enum": [ 
                "Male", 
                "Female", 
                "Intersex", 
                "Unknown"
            ]
        },

        "orientation": {
            "enum": [ 
                "Homosexual", 
                "Heterosexual", 
                "Other", 
                "Unknown"
            ]
        },

        "transgender" : {
            "type" : "boolean"
        },

        "race" : {
            "enum": [
                "White / European",
                "Asain Indian",
                "Middle Eastern",
                "Black / African American",
                "Native American or Alaska Native",
                "Hispanic or Latino",
                "Jewish",
                "Asian",
                "Pacific Islander",
                "Indigenous Australian",
                "Other",
                "Unknown"
            ]
        },

        "mental_illness" : {
            "enum": [
                "Schizophrenia",
                "Manic Depression/Bi-Polar",
                "Borderline Personality Disorder",
                "Depression",
                "Anger Problems",
                "Anxiety",
                "Sociopathy",
                "Psychopathy",
                "Other",
                "Unknown"
            ]
        },

        "images" : {
            "type" : "array",
            "items" : {
                "anyOf" : [{ 
                    "type" : "string"
                }]
            }
        }
    }
}