{
    "id": "/person.1",

    "type": "object",

    "required" : ["name"],

    "properties": {

        "name" : {
            "type": "string"
        },

        "age" : {
            "type": "integer",
            "minimum" : 0,
            "maximum" : 150
        },

        "sex": {
            "enum": [
                "Unknown",
                "Male", 
                "Female",
                "Intersex"
            ]
        },

        "orientation": {
            "enum": [ 
                "Unknown",
                "Homosexual", 
                "Heterosexual", 
                "Other"
            ]
        },

        "transgender" : {
            "type" : "boolean"
        },

        "race" : {
            "type" : "array",
            "items" : { 
                "enum": [
                    "Unknown",
                    "African-American/Black",
                    "European-American/White",
                    "Hispanic/Latino",
                    "Asian",
                    "Race unspecified"
                ]
            }
        },

        "mental_illness" : {
            "type" : "array",
            "items" : { 
                "enum": [
                    "Unknown"
                ]
            }
        },

        "images" : {
            "type" : "array",
            "items" : {
                "anyOf" : [{ 
                    "type" : "string"
                }]
            }
        }
    }
}